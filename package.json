{
  "name": "booksmanagementsystem",
  "version": "1.0.0",
  "description": "Book Management System",
  "main": "server.js",
  "scripts": {
    "start": "bun server.js",
    "server": "bun run --watch server.js",
    "client": "bun start --prefix views",
    "clientinstall": "bun install --prefix views",
    "clientbuild": "bun run build --prefix views",
    "postinstall": "bun run clientinstall",
    "data:import": "bun seeder",
    "dev": "concurrently \"bun run server\" \"bun run client\" ",
    "prod": "bun run clientbuild && cross-env NODE_ENV=production bun start"
  },
  "keywords": [
    "Project",
    "Phase",
    "2"
  ],
  "author": "Barathraj",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "6.20",
    "mongoose": "^5.12.3",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "morgan": "^1.10.0"
  }
}
